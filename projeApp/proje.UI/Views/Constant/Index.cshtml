@using proje.UI.Models
@model ViewModel
@{
    ViewData["Title"] = "Constant";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a href="/Constant/AdminUpdate" class="btn btn-info"> Kullanıcı Bilgilerini Güncelle</a>
                    <a href="/Constant/Update/1" class="btn btn-info"> Düzenle</a>
                    <a href="/Constant/ImageUpload/1" class="btn btn-info"><i class="fas fa-upload"></i> Logo</a>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Ayarlar</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Ayarlar</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        @foreach (var item in Model.Constants)
                        {
                            <div class="card-body p-0" style="display: block; margin:25px;">

                                <strong><i class="fas fa-map-marker-alt mr-1"></i> Adres</strong>

                                <p class="text-muted">@item.Address</p>

                                <hr>

                                <strong><i class="far fa-file-alt mr-1"></i> E-Mail</strong>

                                <p class="text-muted">@item.EMail</p>

                                <hr>

                                <strong><i class="fas fa-phone-alt mr-1"></i> Telefon</strong>

                                <p class="text-muted">@item.Phone</p>

                                <hr>

                                <strong><i class="far fa-file-alt mr-1"></i> Facebook</strong>

                                <p class="text-muted">@item.FacebookUrl</p>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Instagram</strong>

                                <p class="text-muted">@item.InstagramUrl</p>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Twitter</strong>

                                <p class="text-muted">@item.TwitterUrl</p>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Youtube</strong>

                                <p class="text-muted">@item.YoutubeUrl</p>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Whatsapp</strong>

                                <p class="text-muted">@item.Whatsapp</p>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Linkedin</strong>

                                <p class="text-muted">@item.Linkedin</p>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Mesai Saatleri</strong>

                                <p class="text-muted">@item.Shift</p>

                                <hr>

                                <strong><i class="far fa-file-alt mr-1"></i> Logo</strong>

                                <div class="product-img"><img src="@item.LogoUrl" alt="Image" class="img-size-64"></div>

                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i>Footer Logo</strong>

                                <div class="product-img"><img src="@item.FooterLogoUrl" alt="Image" class="img-size-64"></div>

                                <hr>

                                <strong><i class="fas fa-book mr-1">Açıklama</i></strong>

                                <p class="text-muted">
                                    @Html.Raw(item.Text)
                                </p>

                            </div>
                            <!-- /.card-body -->

                            @*<div class="card-footer">
                                <div class="btn-group btn-group-sm float-right">
                                    <a href="/Constant/Update/@item.Id" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                </div>
                                <a href="/Constant/ImageUpload/@item.Id" class="btn btn-info"><i class="fas fa-upload"></i> Logo</a>
                            </div>*@
                        }
                    </div>


                </div>
            </div>
        </div>



    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
