@using proje.UI.Models
@model GalleryViewModel
@{
    ViewData["Title"] = "Gallery";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a type="button" href="/Gallery/Create" class="btn btn-info"><i class="fas fa-plus"></i>  Yeni Kayıt</a>
                    <a type="button" href="/Gallery/ImageUpload" class="btn btn-info"><i class="fas fa-plus"></i>  Fotoğraf Yükle</a>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Galeri</li>
                        <li class="breadcrumb-item active">Kategori</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                @foreach (var category in Model.PhotoCategories)
                {

                    <div class="col-md-6">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">@category.Name</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">

                                <table class="table table-head-fixed text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>Resim</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var image in Model.PhotoGalleries)
                                        {
                                            @if (category.Id == image.PhotoCategoryId)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="col-sm-2">
                                                            <a  href="@image.imageUrl" data-toggle="lightbox" data-title="sample 1 - white" data-gallery="gallery">
                                                                <img src="@image.imageUrl" class="img-fluid mb-2" alt="white sample">
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="/Gallery/DeleteImage/@image.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>

                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                }
            </div>            
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->