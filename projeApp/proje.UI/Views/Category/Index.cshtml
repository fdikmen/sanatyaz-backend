@using proje.UI.Models
@model ViewModel
@{
    ViewData["Title"] = "Neden Biz";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a type="button" href="/Category/Create" class="btn btn-info"><i class="fas fa-plus"></i> Yeni Kayıt</a>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Neden Biz</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            @if (TempData.Count != 0)
            {
                <div class="row">
                    <div class="alert alert-success alert-dismissible fade show col-md-12" role="alert">
                        <strong>@TempData["Mesaj"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }
            <!-- Main row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Neden Biz</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0" style="display: block;">
                            @if (Model.Categories != null)
                            {
                                <div class="table-responsive-md">
                                    <table class="table">
                                        <thead class="col-md-12">
                                            <tr>
                                                <th>Başlık</th>
                                                <th>Sıra Numarası</th>
                                                <th>Aktif/Pasif</th>
                                                <th>Icon</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody class="col-md-12">
                                            @foreach (var item in Model.Categories)
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                                            @item.Title
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                                            @item.Order
                                                        </span>
                                                    </td>

                                                    @if (item.isActive == true)
                                                    {
                                                        <td>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="/Category/Active/@item.Id" class="btn btn-success"><i class="fas fa-check"></i></a>
                                                            </div>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="/Category/Active/@item.Id" class="btn btn-danger"><i class="fas fa-times-circle"></i></a>
                                                            </div>
                                                        </td>
                                                    }

                                                    <td>
                                                        <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                                            @item.iconClass
                                                        </span>
                                                    </td>
                                                    <td class="text-right py-0 align-middle">
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="/Category/Update/@item.Id" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                                            <a href="/Category/Delete/@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>


        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
