@using proje.UI.Models
@model ViewModel
@{
    ViewData["Title"] = "Mental Aritmetiğin Amacı";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <!--Add item-->
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Mental Aritmetiğin Amacı</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Mental Aritmetiğin Amacı</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        @foreach (var item in Model.Purposes)
                        {
                            <div class="card-body p-0" style="display: block; margin:25px;">

                                <strong><i class="fas fa-book mr-1">Açıklama</i></strong>

                                <p class="text-muted">
                                    @item.Text
                                </p>

                                <hr>
                            
                                <strong><i class="far fa-file-alt mr-1"></i> Resim</strong>

                                <div class="product-img"><img src="@item.imageUrl" alt="Image" class="img-size-64"></div>


                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <div class="btn-group btn-group-sm float-right">
                                    <a href="/Purpose/Update/@item.Id" class="btn btn-info"><i class="fas fa-eye"></i> Düzenle</a>
                                </div>
                                <a href="/Purpose/ImageUpload/@item.Id" class="btn btn-info"><i class="fas fa-upload"></i> Resim Yükle</a>
                            </div>
                        }
                    </div>


                </div>
            </div>
        </div>



    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
