@using proje.Entities
@model Promotion
@{
    ViewData["Title"] = "Tanıtım Kutuları";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Tanıtım Kutuları</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Tanıtım Kutuları</li>
                        <li class="breadcrumb-item active">Yeni Kayıt</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            @if (TempData.Count != 0)
            {
                <div class="row">
                    <div class="alert alert-success alert-dismissible fade show col-md-12" role="alert">
                        <strong>@TempData["Mesaj"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>

            }

            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <div class="col-md-12">
                    <!-- Promotion Create -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Create</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div style="margin:40px;">
                                <form asp-action="Create">
                                    <div class="form-row">

                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group col-md-6">
                                            <label>Başlık</label>
                                            <input asp-for="promotionTitle" type="text" class="form-control" placeholder="">
                                            <span asp-validation-for="promotionTitle" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Alt başlık</label>
                                            <input asp-for="promotionSubtitle" type="text" class="form-control" placeholder="">
                                            <span asp-validation-for="promotionSubtitle" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label>Media url</label>
                                            <input asp-for="mediaUrl" type="text" class="form-control" placeholder="">
                                            <span asp-validation-for="mediaUrl" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Sayfa url</label>
                                        <input asp-for="promotionUrl" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="promotionUrl" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Sıra Numarası</label>
                                        <input asp-for="Order" type="number" class="form-control" placeholder="">
                                        <span asp-validation-for="Order" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label>Boyut</label>
                                        <select asp-for="promotionBoxSize" class="form-control">
                                            <option>S</option>
                                            <option>M</option>
                                            <option>L</option>
                                            <option>XL</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <textarea asp-for="promotionText" class="textarea" placeholder=""
                                                  style="width: 100%; height: 400px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                    </div>


                                    @Html.HiddenFor(m => m.Id)
                                    <button type="submit" value="Create" class="btn btn-primary">Kaydet</button>

                                </form>
                                <label></label>
                                <label></label>
                            </div>
                        </div>

                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>


            </div>
          



        </div>
    </section>
    <!-- /.content -->
</div>

