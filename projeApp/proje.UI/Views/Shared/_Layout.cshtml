@using Microsoft.AspNetCore.Http;
<!doctype html>
<html lang="en">
@{ string name = Context.Session.GetString("Name");}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- summernote -->
    <link href="~/css-js/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Summernote/summernote-bs4.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link href="~/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css" rel="stylesheet" />
    <link href="~/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />


    <!-- overlayScrollbars -->
    <link href="~/plugins/overlayScrollbars/css/OverlayScrollbars.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/dist/css/adminlte.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="~/css/dropzone.css" rel="stylesheet" />
    <link href="~/css/basic.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Anasayfa</a>
                </li>
            </ul>


        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="Sanat Yaz" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light"><small>Sanat Yaz Eğitim Kurumları</small></span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block uppercase">@name</a>
                    </div>

                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <!--Menu-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Menu" class="nav-link">
                                <i class="nav-icon fas fa-bars"></i>
                                @* <i class="far fa-address-card"></i>*@
                                <p>
                                    Menu
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>

                        <!--Gallery-->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Galeri
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">2</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Category" asp-controller="Gallery" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kategoriler</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Image" asp-controller="Gallery" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Fotoğraflar</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!--Purpose-Statement-Category-->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Sayfa İçeriği
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">3</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Purpose" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Mental Aritmetiğin Amacı</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Update" asp-controller="Statement" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Gizli Zeka Nedir?</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Category" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Neden Biz</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!--Promotion-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Promotion" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Tanıtım Kutuları
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <!--About-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="About" class="nav-link">
                                <i class="nav-icon far fa-address-card"></i>
                                <p>
                                    Hakkımızda
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <!--CreatePage-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Page" class="nav-link">
                                <i class="nav-icon far fa-image"></i>
                                <p>
                                    Sayfa Oluştur
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Contact" class="nav-link">
                                <i class="nav-icon far fa-image"></i>
                                <p>
                                    İletişim
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <!--Popup-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Popup" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Pop-up
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <!--Slider-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Slider" class="nav-link">
                                <i class="nav-icon far fa-image"></i>
                                <p>
                                    Slider
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <!--Blog-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Blog" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Blog
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                        <!--Form-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Form" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Form
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>

                        </li>
                        <!--Personel-->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Personel" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>
                                    Personel
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>

                        </li>
                        <!--Mail-->
                        <li class="nav-item">
                            <a asp-action="Inbox" asp-controller="Mail" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>
                                    Mail
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>

                        </li>
                        <!--Constant-->
                        <li class="nav-item">
                            <hr />
                            <a asp-action="Index" asp-controller="Constant" class="nav-link">
                                <i class="nav-icon fas fa-cog"></i>
                                <p>
                                    Ayarlar
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>

                        </li>
                        <!--Quit-->
                        <li class="nav-item">
                            <a asp-action="Logout" asp-controller="Admin" class="nav-link">
                                <i class="nav-icon fas fa-external-link-alt"></i>
                                <p>
                                    Çıkış
                                    @*<span class="right badge badge-danger">New</span>*@
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
    </div>


    <div class="wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="main-footer">
        <strong>Copyright &copy; @DateTime.Now.Year</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 3.0.5
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <!-- Bootstrap -->
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/css-js/fastclick.js"></script>
    <script src="~/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/dist/js/demo.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    <script src="~/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/plugins/raphael/raphael.min.js"></script>
    <script src="~/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/plugins/jquery-mapael/maps/usa_states.min.js"></script>
    <script src="~/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <!-- ChartJS -->
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <!-- PAGE SCRIPTS -->
    @*<script src="~/dist/js/pages/dashboard2.js"></script>*@



    <!-- Summernote -->    
    <script src="~/Summernote/summernote-bs4.js"></script>

    <!--Dropzone-->
    <script src="~/js/dropzone.js"></script>  


    <!--Summernote-->
    <script>
        $(document).ready(function () {
            $('.textarea').summernote({
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear', 'strikethrough', 'superscript', 'subscript','hr']],
                    ['fontname', ['fontname']],                    
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']],                
                ]
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
