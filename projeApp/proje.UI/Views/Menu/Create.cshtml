@using proje.UI.Models
@model ViewModel

@{
    ViewData["Title"] = "Menu";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Menu</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Menu</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            @if (TempData.Count != 0)
            {
                <div class="row">
                    <div class="alert alert-success alert-dismissible fade show col-md-12" role="alert">
                        <strong>@TempData["Mesaj"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>

            }

            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <div class="col-md-12">
                    <!-- MENU EKLEME -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Oluştur</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div style="margin:40px;">
                                <form asp-action="Create">
                                    <div class="form-row">

                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group col-md-6">
                                            <label>Menu Adı</label>
                                            <input asp-for="Menu.menuName" type="text" class="form-control" placeholder="">
                                            <span asp-validation-for="Menu.menuName" class="text-danger"></span>
                                            @Html.ValidationMessage("hatalı giriş")
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>İcon</label>
                                            <input asp-for="Menu.iconClass" type="text" class="form-control" placeholder="">
                                            <span asp-validation-for="Menu.iconClass" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label>Sıra Numarası</label>
                                            <input asp-for="Menu.Order" type="number" class="form-control" placeholder="">
                                            <span asp-validation-for="Menu.Order" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Üst Menü</label>
                                            <select asp-for="Menu.mainMenu.Id" class="form-control">
                                                <option value="0">Anamenu</option>
                                                @if (Model.Menus != null)
                                                {
                                                    @foreach (var item in Model.Menus)
                                                    {
                                                        <option value="@item.Id">@item.menuName</option>
                                                    }
                                                }

                                            </select>
                                        </div>
                                    </div>

                                    @Html.HiddenFor(m => m.Menu.Id)
                                    <button type="submit" value="Create" class="btn btn-primary">Kaydet</button>

                                </form>
                                <label></label>
                                <label></label>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
